<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:ignore="HardcodedText,SmallSp">
    <com.lk.robin.commonlibrary.widget.round.RoundedImageView
        android:id="@+id/rv_album_cover"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="95dp"
        android:layout_height="95dp"
        app:riv_oval="false"
        app:riv_corner_radius="5dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_marginStart="13dp"
        android:layout_marginEnd="30dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="大师相声精选"
            android:textColor="@color/color_111111"/>
        <TextView
            android:id="@+id/tv_album_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="9dp"
            android:lines="2"
            android:gravity="start"
            android:ellipsize="end"
            android:text="说学逗唱精妙绝伦，吹棒嘲讽寓教育人。我们本着不是经典不选、不笑掉大牙不选、不让..."
            android:textColor="@color/txtColorGray666" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_listener_num"/>
            <TextView
                android:id="@+id/tv_album_listener"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="1.3万"
                android:textColor="@color/txtColorGray" />
            <ImageView
                android:layout_marginStart="20dp"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_album_nums"/>
            <TextView
                android:id="@+id/tv_album_num"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="14集"
                android:textColor="@color/txtColorGray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>