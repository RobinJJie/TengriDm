<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:ignore="HardcodedText,SmallSp">
    <com.lk.robin.commonlibrary.widget.round.RoundedImageView
        android:id="@+id/rv_fm_cover"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:riv_oval="false"
        app:riv_corner_radius="5dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_fm_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="大师相声精选"
            android:textColor="@color/txtColorBlack"/>
        <TextView
            android:id="@+id/tv_fm_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginTop="9dp"
            android:text="暂无节目"
            android:textColor="@color/txtColorGray666" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_listener_num"/>
            <TextView
                android:id="@+id/tv_fm_listener"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9sp"
                android:text="1.3万"
                android:textColor="@color/txtColorGray" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginEnd="13dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_play_blue"/>

</LinearLayout>