<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94B8D0"
    android:orientation="vertical"
    tools:context=".fragment.homeitem.ProgramInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_back_black"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:padding="8dp"
            android:src="@drawable/ic_app_share" />


        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_below="@id/btn_back"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="0dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_loacl_zy_01" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/card_view"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/card_view"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="*****广播" />

        <TextView
            android:id="@+id/txt_jj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="14dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="12sp"
            tools:text="*****广播" />

        <TextView
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:layout_alignTop="@id/card_view"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_txt_dingyue"
            android:gravity="center"
            android:text="+ 订阅"
            android:textColor="@color/colorWhite"
            android:textSize="11sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout_shap_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/root_jj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="简介"
                    android:textColor="@drawable/color_on_selected_1a92ff"
                    android:textSize="15sp" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/color_un_selected_fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/root_jm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="节目"
                    android:textColor="@drawable/color_on_selected_1a92ff"
                    android:textSize="15sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/color_un_selected_fff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/root_tj"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="推荐"
                    android:textColor="@drawable/color_on_selected_1a92ff"
                    android:textSize="15sp" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/color_un_selected_fff" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="14dp"
                android:textColor="@color/txtColorBlack"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="说学逗唱精妙绝伦，吹棒嘲讽寓教育人。我们本着不是经典不选、不笑掉大牙不选、不让人回味无穷不选的原则，精选出马三立、侯宝林、刘宝瑞、马季等大师们呕心沥血的看家之作，为用户献上一段段百听不厌的相声好段子。" />

            <FrameLayout
                android:id="@+id/root_qbbf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="14dp"
                    android:background="#EFEFEF">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="4dp"
                        android:padding="2dp"
                        android:src="@mipmap/ic_home_palyer_bf1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="3dp"
                        android:padding="3dp"
                        android:text="全部播放"
                        android:textColor="@color/txtColorBlack"
                        android:textSize="12sp" />
                </FrameLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="78dp"
                    android:padding="2dp"
                    android:src="@mipmap/ic_home_paixu_down" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="14dp"
                    android:text="共533期∨"
                    android:textSize="13sp" />

            </FrameLayout>

            <TextView
                android:id="@+id/txt_xgnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:text="其他相关内容"
                android:textColor="@color/txtColorBlack"
                android:textSize="15sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>